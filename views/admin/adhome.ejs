<% include('../layouts/header.ejs') %> 

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
        text-align: center;
    }

    h1 {
        color: #3498db;
        margin-top: 20px;
    }

    table {
        width: 50%;
        margin: 20px auto;
        border-collapse: collapse;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        border-radius: 8px;
    }

    td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    td:first-child {
        font-weight: bold;
    }

    button {
        background-color: #1d9cf1;
        color: #fff;
        border: none;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin-top: 20px;
        cursor: pointer;
        border-radius: 4px;
        transition: background-color 0.3s ease-in-out;
    }

    button:hover {
        background-color: #2980b9;
    }
</style>

<h1>Welcome <%= admin.name %></h1>
<a href="/admin/dashboard"><button>Dashboard</button></a>

<table>
    <tr>
        <td>Name</td>
        <td><%= admin.name %></td>
    </tr>
    <tr>
        <td>Email</td>
        <td><%= admin.email %></td>
    </tr>
    <tr>
        <td>Mobile</td>
        <td><%= admin.mobile %></td>
    </tr>
</table>
<a href="/admin/logout"><button>Logout</button></a>

<% include('../layouts/footer.ejs') %>
